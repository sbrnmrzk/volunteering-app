<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="8dp">
    <ImageView
        android:id="@+id/eventImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginTop="5dp"
        android:contentDescription="Event Picture 01"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tv_eventOrganizer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="4dp"
        android:text="Friday, 20 November 2020, 2pm"
        android:textColor="#FC440F"
        android:textSize="8sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_eventOrganizerJoined"
        android:layout_width="207dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="20dp"
        android:text="Improving rural school infrastructure"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/eventLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="120dp"
        android:text="Kampung Pisang, Banting"
        android:textColor="#989898"
        android:textSize="10sp" />
</androidx.cardview.widget.CardView>